<div class="container">
	<div class="row">

		<%= render'books/list',book:@book ,user:@user %>

		<div class="main-list col-md-9">
			
			<div class="books">
				<h2>Users</h2>
				<table class="table table-striped">
					<thead>
						<tr>
						    <th class="col-md-3">image</th>
						    <th class="col-md-6">name</th>
						    <th class="col-md-3"></th>
					    </tr>
					</thead>
					<% @users.each do |users| %>
					 <tbody>
						<tr>
							<td> <%= attachment_image_tag users, :profile_image, fallback: "no_image.jpg" ,class: "img-responsive"%></td>
							<td> <%= users.name %></td>
							<td> <%= link_to "Show",user_path(users.id), class: "user_#{users.id}" %></td>
						</tr>
					</tbody>
					<% end%>
				</table>
			</div>
		</div>


	</div>
</div>

<footer>
	<div class="container">
		<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6"></div>
		<div class="col-md-3"><p>CopyRight Infratop.inc</p></div>
	</div>
</footer>