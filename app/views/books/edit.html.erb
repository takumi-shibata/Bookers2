<div class="container">
	<div class="row">
		<div class="col-md-3">
		</div>
		<div class="col-md-6">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
			<p class="row">
				<%= f.label :title, "Title"%>
				<%= f.text_field :title, class: "col-md-12 book_title" %>
			</p>
			<p class="row">
				<%= f.label :opinion, "Opinion"%><br>
				<%= f.text_area :body, rows:"2", class: "col-md-12 book_body" %>
			</p>
			<p class="row">
				<%= f.submit "Update Book", class: "btn btn-block btn-primary"%>
			</p>
			<% end %>

		</div>
		<div class="col-md-3">
		</div>
	</div>
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<%= link_to "Show",book_path(@book.id), class: "book_#{@book.id}" %> 
			<span>|</span>
			<%= link_to "Back",books_path,class: "back" %>
		</div>
	</div>
</div>

<footer>
	<div class="container">
		<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6"></div>
		<div class="col-md-3"><p>CopyRight Infratop.inc</p></div>
	</div>
</footer>